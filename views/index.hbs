<div class="my-3">
    <div class="container text-center">
       <h1>{{title}}</h1>

        <form method="POST" action="{{btcpay_host}}/apps/{{btcpay_store_id}}/pos">


            <label for="orderId"></label>
            <input class="form-control" readonly
                   id="orderId"
                   value="{{orderId}}"
                   hidden
                   name="orderId"
            />
            <input class="form-control" type="hidden" name="orderId" value="{{orderId}}"/>
            <input class="form-control" type="hidden" name="notificationUrl"
                   value="{{callback_host}}/orders/{{orderId}}/{{userId}}"/>
            <input class="form-control" type="hidden" name="redirectUrl" value="{{callback_host}}/orders/{{orderId}}"/>
            <button type="submit" name="choiceKey" value="{{choiceKey}}" class="btn btn-warning text-white btn-lg">
                Pay 1 Satoshi
                <img src="/btc.svg" alt="btc" width="40" height="40"/>
                <span role="img" class="pl-1">
                    âš¡
                </span>
            </button>
        </form>
    </div>

</div>

