<link rel="stylesheet" href="/style.css">
<style>
    .order-form {
        max-width: 500px;
    }
</style>
<div class="container-fluid">
    <section>
        <form class="order-form mx-auto">
            <div class="form-group my-2">
                <label for="orderId">
                    Order
                </label>
                <input
                       id="orderId"
                       class="form-control"
                       name="orderId"
                       value="{{orderId}}"
                />
            </div>
            <div class="form-group my-2">
                <label for="status">Status</label>
                <input readonly
                       id="status"
                       class="form-control"
                       value="{{status}}"
                />
            </div>
            <div class="form-group my-2">
                <label for="result">Result</label>
               <textarea
                       title="result from order"
                       id="display"
                       readonly
                       rows="8"
                       class="form-control"
               >
               </textarea>
            </div>
        </form>
    </section>
</div>

